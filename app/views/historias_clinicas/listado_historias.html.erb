<div class = "fieldset">
  <h3>Últimas historias médicas</h3>

  <table class="table table-striped">
    <tr>
      <th>Fecha Cita</th>
      <th>Día de Creación</th>
      <th>Estado</th>
    </tr>
    <% @historias_clinicas.each do |cita| %>
      <tr>
        <td><%#= cita.fecha_cita %></td>
        <td><%#= cita.created_at.strftime("%d de %B - %H:%M %p") %></td>
        <td><%#= cita.estatus %></td>
      </tr>
    <% end %>
  </table>
</div>