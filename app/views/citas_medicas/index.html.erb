        <th>No Accion</th>
        <th>Nombre Completo</th>
        <th>Tel. Res.</th>
        <th>Celular</th>
      </tr>

      <% @citas_medicas_manana.each do |cita| %>
        <tr>
          <td><%= cita.hora %></td>
          <td><%= cita.socio.NumDocumento %></td>
          <td><%= cita.socio.NumSocio %></td>
          <td><%= cita.socio.nombre_completo %> </td>
          <td><%= cita.socio.TelResidencia %></td>
          <td><%= cita.socio.Celular %></td>
        </tr>
      <% end %>
    </table>
  </div>


</div>  