<div class="page-header">
  <h1>Citas Médicas</h1>
</div>

<%= render 'nav_bar' %>

<div id="list">
  <%= render 'search_bar' %>
  <div class = "fieldset">
    <h3>Citas para hoy</h3>

    <table class="table table-striped">
      <tr>
        <th>Hora Cita</th>
        <th>Cédula</th>
        <th>No Accion</th>
        <th>Nombre Completo</th>
        <th>Tel. Res.</th>
        <th>Celular</th>
      </tr>

      <% @citas_medicas_hoy.each do |cita| %>
        <tr>
          <td><%= cita.hora %></td>
          <td><%= cita.socio.NumDocumento %></td>
          <td><%= cita.socio.NumSocio %></td>
          <td><%= cita.socio.nombre_completo %> </td>
          <td><%= cita.socio.TelResidencia %></td>
          <td><%= cita.socio.Celular %></td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class = "fieldset">
    <h3>Citas para mañana</h3>

    <table class="table table-striped">
      <tr>
        <th>Hora Cita</th>
