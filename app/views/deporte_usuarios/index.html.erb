<div class="page-header">
  <h1>Usuarios</h1>
</div>

<%= render 'nav_bar' %>

<div id="list">
  
  <div class = "fieldset">
    <h3>Lista de Usuarios</h3>

    <table class="table table-striped">
      <tr>
        <th>Nombre Completo</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Cédula</th>
        <th>Celular</th>
        <th>Dirección Residencia</th>
        <th>Teléfono Residencia</th>
        <th><th>
      </tr>

      <% @deporte_usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.nombre_completo %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.rol %></td>
          <td><%= usuario.cedula %> </td>
          <td><%= usuario.celular %></td>
          <td><%= usuario.direccion_residencia %></td>
          <td><%= usuario.telefono_residencia %></td>
          <td>
          <%= link_to 'Editar', edit_deporte_usuario_path(usuario), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', deporte_usuario_path(usuario), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
        </tr>
      <% end %>
    </table>
  </div>

</div>  