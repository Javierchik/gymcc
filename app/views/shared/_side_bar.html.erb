<% cita = [
  {"controller_path" => "citas_medicas", "action_name"=>"index"},
  {"controller_path" => "citas_medicas", "action_name"=>"agendar"},
  {"controller_path" => "citas_medicas", "action_name"=>"create"},
  {"controller_path" => "citas_medicas", "action_name"=>"edit"},
  {"controller_path" => "citas_medicas", "action_name"=>"update"},
  ] %>  

<% historia = [
  {"controller_path" => "historias_clinicas", "action_name"=>"index"},
  {"controller_path" => "historias_clinicas", "action_name"=>"elaborar"},
  {"controller_path" => "historias_clinicas", "action_name"=>"create"},
