  {"controller_path" => "deporte_usuarios", "action_name"=>"index"},
  {"controller_path" => "deporte_usuarios", "action_name"=>"new"},
  {"controller_path" => "deporte_usuarios", "action_name"=>"create"},
  {"controller_path" => "deporte_usuarios", "action_name"=>"edit"},
  ] %>  

